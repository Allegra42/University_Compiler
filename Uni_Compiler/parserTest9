/** wohl der sinnvollste aller Tests was das Programmieren angeht ^^ **/

int[5] numbers;
int temp1;
int temp2;
int index;
int sum;
int value;

value=1;
index=5;
sum:=0;

/** die ersten fuenf  2^x-Zahlen, deren Quersumme = 8 ist **/
while(index<:>0){
	index:=-1+index;
	
	while(!sum=8){
		value:=value*2;
		temp1:=value;
		sum:=0;

		while(temp1 > 0){ /** Quersumme bilden **/
			temp1:=temp1/10;
			sum:=temp2-temp1;
			temp2:=temp1;
		}
	};
	
	numbers[index]:=value;

};
